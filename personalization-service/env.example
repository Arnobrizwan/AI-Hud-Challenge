# Personalization Service Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/personalization
REDIS_URL=redis://localhost:6379/0

# Application Configuration
APP_NAME=Personalization Service
DEBUG=false
ENVIRONMENT=development

# Model Configuration
COLLABORATIVE_FACTORS=100
COLLABORATIVE_REGULARIZATION=0.01
COLLABORATIVE_ITERATIONS=50

# Content-based Filtering
CONTENT_EMBEDDING_DIM=384
TFIDF_MAX_FEATURES=10000

# Bandit Algorithms
BANDIT_ALPHA=1.0
BANDIT_BETA=1.0
EPSILON=0.1

# Diversity and Serendipity
DIVERSITY_THRESHOLD=0.3
SERENDIPITY_WEIGHT=0.2

# Privacy Settings
PRIVACY_EPSILON=1.0
PRIVACY_DELTA=0.00001

# Cache Settings
PROFILE_CACHE_TTL=3600
MODEL_CACHE_TTL=86400

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
