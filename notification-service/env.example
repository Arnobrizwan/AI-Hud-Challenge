# Database Configuration
DATABASE_URL=postgresql://notification_user:notification_pass@localhost:5432/notification_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_PATH=./credentials/firebase-credentials.json

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ML Model Paths
TIMING_MODEL_PATH=./models/timing_model.pkl
RELEVANCE_MODEL_PATH=./models/relevance_model.pkl
ENGAGEMENT_MODEL_PATH=./models/engagement_model.pkl

# Notification Settings
MAX_NOTIFICATIONS_PER_HOUR=10
MAX_NOTIFICATIONS_PER_DAY=50
DEFAULT_RELEVANCE_THRESHOLD=0.3

# A/B Testing
AB_TESTING_ENABLED=true
AB_TEST_EXPERIMENTS=notification_strategy_v3,timing_optimization_v2

# Performance Settings
MAX_CONCURRENT_DECISIONS=1000
DECISION_TIMEOUT_SECONDS=5

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=false
