# Application Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/evaluation_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# BigQuery Configuration
BIGQUERY_PROJECT_ID=your-project-id
BIGQUERY_DATASET_ID=evaluation_dataset
BIGQUERY_CREDENTIALS_PATH=/path/to/credentials.json

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_REGISTRY_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=evaluation-suite

# Vertex AI Configuration
VERTEX_AI_PROJECT_ID=your-project-id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_CREDENTIALS_PATH=/path/to/credentials.json

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000

# Alerting Configuration
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password

# Evaluation Configuration
MAX_CONCURRENT_EVALUATIONS=10
EVALUATION_TIMEOUT_SECONDS=3600
CACHE_TTL_SECONDS=3600

# Statistical Testing Configuration
DEFAULT_ALPHA=0.05
DEFAULT_POWER=0.8
BOOTSTRAP_SAMPLES=1000
CONFIDENCE_LEVEL=0.95

# Drift Detection Configuration
DRIFT_SIGNIFICANCE_LEVEL=0.05
DRIFT_ALERT_THRESHOLD=0.7
DRIFT_WINDOW_SIZE=1000

# A/B Testing Configuration
MIN_EXPERIMENT_DURATION_DAYS=7
MAX_EXPERIMENT_DURATION_DAYS=30
MIN_SAMPLE_SIZE_PER_VARIANT=1000

# Performance Configuration
MAX_BATCH_SIZE=10000
ENABLE_PARALLEL_PROCESSING=true
MAX_WORKERS=4
