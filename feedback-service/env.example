# Feedback Service Environment Configuration

# Application
APP_NAME=Feedback Service
DEBUG=false
VERSION=1.0.0

# Database
DATABASE_URL=postgresql://feedback_user:feedback_pass@localhost:5432/feedback_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=feedback

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_FEEDBACK_TOPIC=feedback-events
KAFKA_ANALYTICS_TOPIC=analytics-events

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# WebSocket
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30

# ML Models
MODEL_CACHE_SIZE=100
MODEL_UPDATE_INTERVAL=3600

# Quality Thresholds
QUALITY_THRESHOLD_LOW=0.3
QUALITY_THRESHOLD_MEDIUM=0.6
QUALITY_THRESHOLD_HIGH=0.8

# Processing Limits
MAX_FEEDBACK_PER_SECOND=10000
MAX_ANNOTATION_TASKS_PER_USER=50
MAX_CAMPAIGN_TASKS=10000

# Monitoring
PROMETHEUS_PORT=9090
METRICS_INTERVAL=60

# File Uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,text/plain,application/pdf

# External Services
EXTERNAL_FEEDBACK_WEBHOOK_URL=
EXTERNAL_ML_SERVICE_URL=
