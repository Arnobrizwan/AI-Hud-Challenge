# Database Configuration
DATABASE_URL=postgresql://safety_user:safety_pass@localhost:5432/safety_db
REDIS_URL=redis://localhost:6379/0

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here
DEBUG=true

# ML Models Configuration
MODEL_PATH=/app/models
ENABLE_ML_MODELS=true
MODEL_CACHE_SIZE=1000

# External APIs
PERSPECTIVE_API_KEY=your-perspective-api-key
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Monitoring and Observability
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_URL=redis://localhost:6379/1
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=60

# Content Moderation
CONTENT_MODERATION_ENABLED=true
TOXICITY_THRESHOLD=0.7
HATE_SPEECH_THRESHOLD=0.6
SPAM_THRESHOLD=0.8

# Drift Detection
DRIFT_DETECTION_ENABLED=true
DRIFT_THRESHOLD=0.1
DRIFT_WINDOW_SIZE=1000
DRIFT_CHECK_INTERVAL=3600

# Abuse Detection
ABUSE_DETECTION_ENABLED=true
ABUSE_THRESHOLD=0.5
REPUTATION_DECAY_RATE=0.1
BEHAVIOR_WINDOW=86400

# Compliance
GDPR_COMPLIANCE_ENABLED=true
AUDIT_RETENTION_DAYS=90
PRIVACY_MODE=true

# Security
ENCRYPTION_ENABLED=true
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Performance
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30
CACHE_TTL=3600

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/safety-service.log
LOG_ROTATION=daily
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=30
