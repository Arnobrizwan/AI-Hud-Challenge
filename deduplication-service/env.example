# Database Configuration
DATABASE_URL=postgresql://dedup_user:dedup_pass@localhost:5432/deduplication_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
APP_NAME=Deduplication Service
APP_VERSION=1.0.0

# Similarity Thresholds
SIMILARITY_THRESHOLD=0.85
LSH_THRESHOLD=0.7
CONTENT_SIMILARITY_THRESHOLD=0.8
TITLE_SIMILARITY_THRESHOLD=0.9

# Clustering Parameters
CLUSTERING_EPS=0.3
CLUSTERING_MIN_SAMPLES=2
MAX_CLUSTER_SIZE=100

# LSH Parameters
LSH_NUM_PERM=128
LSH_NUM_BANDS=16
LSH_BAND_SIZE=8

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Processing Configuration
BATCH_SIZE=100
MAX_WORKERS=4
PROCESSING_TIMEOUT=300

# Temporal Decay
TEMPORAL_DECAY_HALF_LIFE_HOURS=24

# Quality Scoring Weights
TITLE_WEIGHT=0.4
CONTENT_WEIGHT=0.4
ENTITY_WEIGHT=0.2

# Representative Selection Weights
CENTRALITY_WEIGHT=0.3
QUALITY_WEIGHT=0.25
FRESHNESS_WEIGHT=0.2
SOURCE_AUTHORITY_WEIGHT=0.15
COMPLETENESS_WEIGHT=0.1

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["*"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Bloom Filter Configuration
BLOOM_FILTER_CAPACITY=1000000
BLOOM_FILTER_ERROR_RATE=0.01
