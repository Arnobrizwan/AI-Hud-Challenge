# Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=json
APP_NAME=Foundations & Guards Service
APP_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=1

# Security Settings
SECRET_KEY=01sF4Kz9soFQdrnQIuqMVgwWeSt695q1F/azlV3y2ak=
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Firebase Configuration
FIREBASE_PROJECT_ID=news-hub-prod-2024
FIREBASE_CREDENTIALS_PATH=./config/service-account-key.json
# OR use JSON directly (useful for container deployments)
FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project"}

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20

# Rate Limiting Configuration
RATE_LIMIT_PER_USER=1000
RATE_LIMIT_PER_IP=10000
RATE_LIMIT_WINDOW_SECONDS=60

# Request Configuration
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:8081"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_HEADERS=["*"]

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# Logging Configuration
LOG_FILE=logs/app.log

# Metrics Configuration
ENABLE_METRICS=true
METRICS_PATH=/metrics

# Health Check Configuration  
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_DEPENDENCIES=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# GCP Configuration (for production deployment)
GCP_PROJECT_ID=news-hub-prod-2024
GCP_REGION=asia-southeast1
CLOUD_RUN_SERVICE_NAME=foundations-guards-service

# Build Information (automatically set during CI/CD)
BUILD_DATE=2023-12-01T00:00:00Z
VCS_REF=main

# GCP Service Account Key
GCP_SERVICE_ACCOUNT_KEY_PATH=./config/service-account-key.json
