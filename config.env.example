# Environment Configuration for Ranking Microservice

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
LOG_LEVEL=info

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=100

# Prometheus Metrics
PROMETHEUS_PORT=8001

# ML Model Configuration
MODEL_PATH=models/
MODEL_VERSION=v3

# Feature Cache Configuration
FEATURE_CACHE_TTL=3600
PRECOMPUTED_CACHE_TTL=300

# Performance Configuration
MAX_ARTICLES_PER_REQUEST=100
DEFAULT_RANKING_LIMIT=20
RESPONSE_TIMEOUT_MS=100

# A/B Testing Configuration
AB_TEST_ENABLED=true
DEFAULT_EXPERIMENT=ranking_algorithm_v4

# Monitoring Configuration
METRICS_EXPORT_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# Security Configuration
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=*

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/ranking_db

# External Services
CONTENT_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:8002
ANALYTICS_SERVICE_URL=http://localhost:8003
